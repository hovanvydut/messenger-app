extends ../../layouts/sign

block content
  h5 Create account

  form(method='POST' enctype="application/x-www-form-urlencoded")
    //- .form-group.input-group-lg
    //-   input#firstNameRegisterEmail.form-control(name='firstName' type='text' placeholder='Firstname' required='' autofocus='')
    //- .form-group.input-group-lg
    //-   input#lastNameRegisterEmail.form-control(name='lastName' type='text' placeholder='Lastname' required='')
    form-group.input-group-lg
      input#usernameRegisterEmail.form-control(name='username' type='text' placeholder='Username' required='' autofocus='')
    .form-group.input-group-lg
      input#emailRegisterEmail.form-control(name='email' type='email' placeholder='Email' required='')
    .form-group.input-group-lg
      input#passwordRegisterEmail.form-control(name='password' type='password' placeholder='Password' required='')
    .form-group.input-group-lg
      #recaptcha-container
    button#btnRegisterEmail.btn.btn-primary.btn-lg.btn-block(type='button' onclick='registerWithEmail(event)') Register
    hr
    p.text-muted Already have an account?
    a.btn.btn-outline-light.btn-sm(href='/account/login') Sign in!
  
