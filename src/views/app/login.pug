extends ../layouts/sign

block content
  h5 Sign in

  form
    .form-group.input-group-lg
      input#emailLogin.form-control(type='text' placeholder='Username or email' required='' autofocus='')
    .form-group.input-group-lg
      input#passwordLogin.form-control(type='password' placeholder='Password' required='')
    .form-group.d-flex.justify-content-between
      .custom-control.custom-checkbox
        input#customCheck1.custom-control-input(type='checkbox' checked='')
        label.custom-control-label(for='customCheck1') Remember me
      a(href='/reset-password') Reset password
    button#btnLogin.btn.btn-primary.btn-lg.btn-block(type='submit' onclick='handleLogin(event)') Sign in
    hr
    p.text-muted Login with your social media account.
    ul.list-inline
      li.list-inline-item
        a.btn.btn-floating.btn-facebook(href='#')
          i.fa.fa-facebook
      li.list-inline-item
        a.btn.btn-floating.btn-twitter(href='#')
          i.fa.fa-twitter
      li.list-inline-item
        a.btn.btn-floating.btn-dribbble(href='#')
          i.fa.fa-dribbble
      li.list-inline-item
        a.btn.btn-floating.btn-linkedin(href='#')
          i.fa.fa-linkedin
      li.list-inline-item
        a#googleLogin.btn.btn-floating.btn-google(href='#' onclick='signInWithGoogle(event)')
          i.fa.fa-google
      li.list-inline-item
        a.btn.btn-floating.btn-behance(href='#')
          i.fa.fa-behance
      li.list-inline-item
        a.btn.btn-floating.btn-instagram(href='#')
          i.fa.fa-instagram
    hr
    p.text-muted Don&apos;t have an account?
    a.btn.btn-outline-light.btn-sm(href='/account/register') Register now!
